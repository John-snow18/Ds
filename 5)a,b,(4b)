#include <stdio.h>
#include <stdlib.h>

struct node {
    int data, height;
    struct node *left, *right;
};

int height(struct node *n) {
    if (!n) return 0;
    return n->height;
}

int max(int a, int b) { return a > b ? a : b; }

struct node *newNode(int key) {
    struct node *n = malloc(sizeof(struct node));
    n->data = key;
    n->left = n->right = NULL;
    n->height = 1;
    return n;
}

struct node *rightRotate(struct node *y) {
    struct node *x = y->left;
    struct node *t = x->right;
    x->right = y;
    y->left = t;
    y->height = max(height(y->left), height(y->right)) + 1;
    x->height = max(height(x->left), height(x->right)) + 1;
    return x;
}

struct node *leftRotate(struct node *x) {
    struct node *y = x->right;
    struct node *t = y->left;
    y->left = x;
    x->right = t;
    x->height = max(height(x->left), height(x->right)) + 1;
    y->height = max(height(y->left), height(y->right)) + 1;
    return y;
}

int getBalance(struct node *n) {
    if (!n) return 0;
    return height(n->left) - height(n->right);
}

struct node *insert(struct node *n, int key) {
    if (!n) return newNode(key);

    if (key < n->data) n->left = insert(n->left, key);
    else if (key > n->data) n->right = insert(n->right, key);
    else return n;

    n->height = 1 + max(height(n->left), height(n->right));
    int balance = getBalance(n);

    if (balance > 1 && key < n->left->data)
        return rightRotate(n);

    if (balance < -1 && key > n->right->data)
        return leftRotate(n);

    if (balance > 1 && key > n->left->data) {
        n->left = leftRotate(n->left);
        return rightRotate(n);
    }

    if (balance < -1 && key < n->right->data) {
        n->right = rightRotate(n->right);
        return leftRotate(n);
    }

    return n;
}

void preorder(struct node *root) {
    if (root) {
        printf("%d ", root->data);
        preorder(root->left);
        preorder(root->right);
    }
}

int main() {
    struct node *root = NULL;
    root = insert(root, 30);
    root = insert(root, 20);
    root = insert(root, 40);
    root = insert(root, 10);

    preorder(root);
}
#include <stdio.h>
#include <stdlib.h>

struct node { int data; struct node *next; };
struct node *top = NULL;

void push(int x) {
    struct node *n = malloc(sizeof(struct node));
    n->data = x; n->next = top;
    top = n;
}
int pop() {
    struct node *temp = top;
    int x = temp->data;
    top = top->next;
    free(temp);
    return x;
}
void display() {
    struct node *temp = top;
    while (temp) { printf("%d ", temp->data); temp = temp->next; }
}

int main() {
    push(10); push(20); push(30);
    pop();
    display();
}
